<AnchorPane prefHeight="680.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Game.ScoreController">
   <children>
      <ImageView fitHeight="680.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Image/Score.png" />
         </image>
      </ImageView>
      <Button layoutY="1.0" mnemonicParsing="false" onAction="#backToMenu" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: transparent;" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <graphic>
            <ImageView fitHeight="44.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Image/left.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button layoutX="474.0" layoutY="533.0" mnemonicParsing="false" onAction="#playGame" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: transparent;" text="Play Again" wrapText="true" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="400.0">
         <font>
            <Font name="Bookman Old Style Bold" size="24.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <effect>
            <Bloom />
         </effect>
